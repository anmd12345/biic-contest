
@{
    ViewBag.Title = "UserInformation";
}

<section class="pt-5 pb-9">
    <div class="container-small">
        <nav class="mb-3" aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@BIIC_Contest.Constants.RouteConstant.USER_MANAGEMENT_PAGE">Danh sách người dùng</a></li>
                <li class="breadcrumb-item">Thông tin người dùng</li>
            </ol>
        </nav>
        <div class="row align-items-center justify-content-between g-3 mb-4">
            <div class="col-auto">
                <h3 class="mb-0"></h3>
            </div>
            <div class="col-auto">
                <div class="row g-2 g-sm-3">
                    <div class="col-auto"><button class="btn btn-phoenix-danger"><span class="fas fa-trash-alt me-2"></span>Xóa vĩnh viễn</button></div>
                    <div class="col-auto"><button class="btn btn-phoenix-secondary"><span class="fas fa-key me-2"></span>Đặt lại mật khẩu</button></div>
                </div>
            </div>
        </div>
        <div class="row g-3 mb-6">
            <div class="col-12 col-lg-8">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="border-bottom border-dashed pb-4">
                            <div class="row align-items-center g-3 g-sm-5 text-center text-sm-start">
                                <div class="col-12 col-sm-auto">
                                    <input class="d-none" id="avatarFile" type="file" />
                                    <label class="cursor-pointer avatar avatar-5xl" for="avatarFile">
                                        <img class="rounded-circle" src="~/assets/img/user/default_logo.jpg" alt="" />
                                    </label>
                                </div>
                                <div class="col-12 col-sm-auto flex-1">
                                    <h3>Adminstrator</h3>
                                    <div class="col-auto">
                                        <div class="form-check mb-0">
                                            <input class="form-check-input" id="basic-checkbox" type="checkbox" />
                                            <label class="form-check-label mb-0" for="basic-checkbox">Đặt lại ảnh đại diện mặc định</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-between-center pt-4">
                            <div>
                                <h6 class="mb-2 text-body-secondary">Chức vụ</h6>
                                <h4 class="fs-7 text-body-highlight mb-0">Giám khảo</h4>
                            </div>
                            <div class="text-end">
                                <h6 class="mb-2 text-body-secondary">Ngày tạo</h6>
                                <h4 class="fs-7 text-body-highlight mb-0">09/06/2025-17:04</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="border-bottom border-dashed">
                            <h4 class="mb-3">Liên hệ</h4>
                        </div>
                        <div class="border-top border-dashed pt-4">
                            <div class="row flex-between-center mb-2">
                                <div class="col-auto">
                                    <h5 class="text-body-highlight mb-0">Email</h5>
                                </div>
                                <div class="col-auto"><a class="lh-1" href="mailto:shatinon@jeemail.com">shatinon@jeemail.com</a></div>
                            </div>
                            <div class="row flex-between-center">
                                <div class="col-auto">
                                    <h5 class="text-body-highlight mb-0">Số điện thoại</h5>
                                </div>
                                <div class="col-auto"><a href="tel:+1234567890">+1234567890</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="scrollbar">
                <ul class="nav nav-underline fs-9 flex-nowrap mb-3 pb-1" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link text-nowrap active" id="personal-info-tab" data-bs-toggle="tab" href="#tab-personal-info" role="tab" aria-controls="tab-personal-info" aria-selected="true">
                            <span class="fas fa-user me-2"></span>
                            Thông tin người dùng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-nowrap" id="permission-tab" data-bs-toggle="tab" href="#tab-permission" role="tab" aria-controls="permission" aria-selected="true">
                            <span class="fas fa-lock me-2"></span>
                            Quyền sử dụng hệ thống
                        </a>
                    </li>
                </ul>
            </div>
            <div class="tab-content" id="profileTabContent">
                <div class="tab-pane fade  show active" id="tab-personal-info" role="tabpanel" aria-labelledby="personal-info-tab">
                    <div class="row gx-3 gy-4 mb-5">
                        <div class="col-12 col-lg-6">
                            <label class="form-label text-body-highlight fs-8 ps-0 text-capitalize lh-sm" for="fullName">Họ và tên</label>
                            <input class="form-control" id="fullName" type="text" placeholder="Họ và tên" />
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label text-body-highlight fs-8 ps-0 text-capitalize lh-sm" for="roles">Phân quyền tài khoản</label>
                            <select class="form-select" id="roles" onchange="selectedRole(this)">
                                <option value="0">Chưa chọn quyền</option>
                                <option value="2">Ban giám khảo</option>
                                <option value="3">Nhân viên</option>
                                <option value="4">Người dùng</option>
                            </select>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label text-body-highlight fs-8 ps-0 text-capitalize lh-sm" for="email">Địa chỉ email</label>
                            <input class="form-control" id="email" type="text" placeholder="example@gmail.com" />
                        </div>
                        <div class="col-12 col-lg-6">
                            <label class="form-label text-body-highlight fw-bold fs-8 ps-0 text-capitalize lh-sm" for="phone">Số điện thoại</label>
                            <input class="form-control" id="phone" type="text" placeholder="09999999999" />
                        </div>
                        <div class="col-12 col-lg-12">
                            <label class="form-label text-body-highlight fw-bold fs-8 ps-0 text-capitalize lh-sm" for="specialty-field">
                                Chuyên môn
                            </label>
                            <input class="form-control" id="specialty-field" type="text" placeholder="Chuyên môn" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-content" id="permissionTabContent">
                <div class="tab-pane fade" id="tab-permission" role="tabpanel" aria-labelledby="permission-tab">
                    <div class="row gx-3 gy-4 mb-5">
                        <div class="col-12 col-lg-6">
                            <div class="border-bottom border-translucent border-dashed pb-3 mb-4">
                                <h5 class="text-body mb-3 text-uppercase">Bài dự thi của thí sinh</h5>
                                <div class="form-check"><input class="form-check-input" id="showEmail" type="checkbox" name="showEmail" /><label class="form-check-label fs-8" for="showEmail">Cho phép xem bài dự thi</label></div>
                                <div class="form-check"><input class="form-check-input" id="showExperiences" type="checkbox" name="showExperiences" /><label class="form-check-label fs-8" for="showExperiences">Cho phép chấm bài dự thi</label></div>
                                <div class="form-check"><input class="form-check-input" id="showFollowers" type="checkbox" name="showFollowers" /><label class="form-check-label fs-8" for="showFollowers">Cho phép chỉnh sửa điểm</label></div>
                                <div class="form-check"><input class="form-check-input" id="showFollowers" type="checkbox" name="showFollowers" /><label class="form-check-label fs-8" for="showFollowers">Cho phép chỉnh sửa bài dự thi</label></div>
                                <div class="form-check"><input class="form-check-input" id="showFollowers" type="checkbox" name="showFollowers" /><label class="form-check-label fs-8" for="showFollowers">Cho phép xem tất cả điểm số</label></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="border-bottom border-translucent border-dashed pb-3 mb-4">
                                <h5 class="text-body mb-3 text-uppercase">Hoạt động trên hệ thống</h5>
                                <div class="form-check"><input class="form-check-input" id="tagGroupMembers" type="radio" name="tagPermission" /><label class="form-check-label fs-8" for="tagGroupMembers">Được phép truy cập</label></div>
                                <div class="form-check"><input class="form-check-input" id="tagEveryone" type="radio" checked="checked" name="tagPermission" /><label class="form-check-label fs-8" for="tagEveryone">Không được phép</label></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="border-bottom border-translucent border-dashed pb-3 mb-4">
                                <h5 class="text-body mb-3 text-uppercase">Tạo tài khoản</h5>
                                <div class="form-check"><input class="form-check-input" id="tagGroupMembers" type="radio" name="tagPermission" /><label class="form-check-label fs-8" for="tagGroupMembers">Được phép truy cập</label></div>
                                <div class="form-check"><input class="form-check-input" id="tagEveryone" type="radio" checked="checked" name="tagPermission" /><label class="form-check-label fs-8" for="tagEveryone">Không được phép</label></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="border-bottom border-translucent border-dashed pb-3 mb-4">
                                <h5 class="text-body mb-3 text-uppercase">HỘP THƯ</h5>
                                <div class="form-check form-switch"><input class="form-check-input" id="showPhone" type="checkbox" name="showPhone" /><label class="form-check-label fs-8" for="showPhone">Cho phép xem hộp thư đến</label></div>
                                <div class="form-check form-switch"><input class="form-check-input" id="showPhone" type="checkbox" name="showPhone" /><label class="form-check-label fs-8" for="showPhone">Cho phép gửi thư</label></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="border-bottom border-translucent border-dashed pb-3 mb-4">
                                <h5 class="text-body mb-3 text-uppercase">Chỉnh sửa thông tin trang web</h5>
                                <div class="form-check"><input class="form-check-input" id="tagGroupMembers" type="radio" name="tagPermission" /><label class="form-check-label fs-8" for="tagGroupMembers">Được phép truy cập</label></div>
                                <div class="form-check"><input class="form-check-input" id="tagEveryone" type="radio" checked="checked" name="tagPermission" /><label class="form-check-label fs-8" for="tagEveryone">Không được phép</label></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="border-bottom border-translucent border-dashed pb-3 mb-4">
                                <h5 class="text-body mb-3 text-uppercase">Tin tức, cuộc thi</h5>
                                <div class="form-check"><input class="form-check-input" id="showEmail" type="checkbox" name="showEmail" /><label class="form-check-label fs-8" for="showEmail">Cho phép tạo và đăng</label></div>
                                <div class="form-check"><input class="form-check-input" id="showExperiences" type="checkbox" name="showExperiences" /><label class="form-check-label fs-8" for="showExperiences">Cho phép chỉnh sửa</label></div>
                                <div class="form-check"><input class="form-check-input" id="showFollowers" type="checkbox" name="showFollowers" /><label class="form-check-label fs-8" for="showFollowers">Cho phép xóa</label></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="text-end"><button class="btn btn-primary px-7">Lưu thay đổi</button></div>
        </div>
    </div>
</section>

